                                android:textSize="@dimen/textsize_20"
                                android:id="@+id/tv_zhiwen"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="20dp"
                            android:gravity="center"
                            >

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="30dp"
                                android:background="@mipmap/arrow_right1" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/image_shenfen"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:background="@mipmap/login_ok_n" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="登录"
                                android:textColor="@color/textcolor"
                                android:textSize="@dimen/textsize_20" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_shenfen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="学员编号："
                                android:textColor="@color/textcolor"
                                android:textSize="@dimen/textsize_20" />

                            <TextView
                                android:id="@+id/tv_bianhao"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/textcolor"
                                android:textSize="@dimen/textsize_20" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="身份证号："
                                android:textColor="@color/textcolor"
                                android:textSize="@dimen/textsize_20"
                                android:layout_marginLeft="10dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/textcolor"
                                android:textSize="@dimen/textsize_20"
                                android:id="@+id/tv_idcard"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="学员姓名："
                                android:textColor="@color/textcolor"
                                android:textSize="@dimen/textsize_20"
                                android:layout_marginLeft="10dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/textcolor"
                                android:textSize="@dimen/textsize_20"
                                android:id="@+id/tv_stu_name"
                                />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="学车类型："
                                android:textColor="@color/textcolor"
                                android:textSize="@dimen/textsize_20"
                                android:layout_marginLeft="10dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/textcolor"
                                android:textSize="@dimen/textsize_20"
                                android:id="@+id/tv_carlx"
                                />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_studentout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"

                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="学员编号："
                                android:textColor="@color/textcolor"
                                android:textSize="@dimen/textsize_19" />

                            <TextView
                                android:id="@+id/tv_studentcode"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="学员编号"
                                android:textColor="@color/textcolor"
                                android:textSize="@dimen/textsize_19" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/bg_gray"
