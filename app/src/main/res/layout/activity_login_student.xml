                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="身份证号："
                                android:textColor="@color/textcolor"
                                android:textSize="@dimen/textsize_19"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/textcolor"
                                android:textSize="@dimen/textsize_19"
                                android:id="@+id/tv_IDcard"

                                />

                        </LinearLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/bg_gray"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:orientation="horizontal"
                            >


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight="1.1"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="学员姓名："
                                    android:textColor="@color/textcolor"
                                    android:textSize="@dimen/textsize_19"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="@color/textcolor"
                                    android:textSize="@dimen/textsize_19"
                                    android:id="@+id/tv_stuname"
                                    />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight="1"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="培训车型："
                                    android:textColor="@color/textcolor"
                                    android:textSize="@dimen/textsize_19"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="@color/textcolor"
                                    android:textSize="@dimen/textsize_19"
                                    android:id="@+id/tv_cartype"
                                    />
                            </LinearLayout>


                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/bg_gray"
                            />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight="1.1"
                                >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="总学时："
                                    android:textColor="@color/textcolor"
                                    android:textSize="@dimen/textsize_19" />

                                <TextView
                                    android:id="@+id/tv_zxs"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="@color/textcolor"
                                    android:textSize="@dimen/textsize_19" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight="1"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="本部分学时："
                                    android:textColor="@color/textcolor"
                                    android:textSize="@dimen/textsize_19" />

                                <TextView
                                    android:id="@+id/tv_ywcxs"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="@color/textcolor"
                                    android:textSize="@dimen/textsize_19" />

                            </LinearLayout>


                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/bg_gray"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight="1.1"
                                >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="总里程："
                                    android:textColor="@color/textcolor"
                                    android:textSize="@dimen/textsize_19" />

                                <TextView
                                    android:id="@+id/tv_zlc"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="@color/textcolor"
                                    android:textSize="@dimen/textsize_19" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight="1"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="本部分里程："
                                    android:textColor="@color/textcolor"
                                    android:textSize="@dimen/textsize_19" />

                                <TextView
                                    android:id="@+id/tv_ywclc"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="@color/textcolor"
                                    android:textSize="@dimen/textsize_19" />

                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/bg_gray"
                            />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="今日学时："
                                android:textColor="@color/textcolor"
                                android:textSize="@dimen/textsize_19" />

                            <TextView
                                android:id="@+id/tv_todayxs"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/textcolor"
                                android:textSize="@dimen/textsize_19" />

                        </LinearLayout>



                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/bg_gray"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:orientation="horizontal"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="本次有效培训时长："
                                android:textColor="@color/textcolor"
                                android:textSize="@dimen/textsize_19" />

                            <TextView
                                android:id="@+id/tv_valid_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/textcolor"
                                android:textSize="@dimen/textsize_19" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/bg_gray"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="登录时间："
                                android:textColor="@color/textcolor"
                                android:textSize="@dimen/textsize_19" />

                            <TextView
                                android:id="@+id/tv_logintime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/textcolor"
                                android:textSize="@dimen/textsize_19" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="110dp"
                            android:background="@mipmap/gril"
                            android:scaleType="fitXY"
                            android:id="@+id/image_stu"/>

                        <Button
                            android:id="@+id/bt_studentout"
                            android:layout_width="120dp"
                            android:layout_height="60dp"
                            android:background="@drawable/bg_click_green"
                            android:text="学员登出"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textsize_22"
                            android:layout_marginTop="10dp"/>

                        <Button
                            android:id="@+id/bt_validtime"
                            android:layout_width="120dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/bg_click_green"
                            android:gravity="center"
                            android:text="有效学时"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textsize_22" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout_showphoto"
        android:background="#66000000"
        android:visibility="visible"
        android:clickable="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="20dp"
            android:background="@mipmap/camera_bg"
            android:layout_gravity="center"
            >

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/frame_L"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"

                >
                <com.serenegiant.widget.UVCCameraTextureView
                    android:id="@+id/camera_view_L"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true" />
                <LinearLayout
                    android:id="@+id/textViewUVCPromptL"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="#000"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/video_camera1"
                        android:alpha="0.3"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="左USB摄像头"
                        android:gravity="center"
                        android:textColor="#ffffff"
                        android:alpha="0.6"/>
                </LinearLayout>

            </FrameLayout>

        </LinearLayout>

    </FrameLayout>

</RelativeLayout>
