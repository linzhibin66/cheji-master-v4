                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="强制登出"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_18"
                    />


            </RelativeLayout>

        </RelativeLayout>



            <LinearLayout
